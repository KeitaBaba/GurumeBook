<section class="hero has-background-black is-fullheight">
        <div class="hero-body">
            <div class="container has-text-centered">
              <div class="column is-4 is-offset-4">
                <p class="subtitle">プロフィール編集</p>
                  <div class="box">
                    <%= form_for @user do |f| %>
                      <div class="field">
                        <%= f.label :name, "ユーザー名", class: "label" %>
                        <%= f.text_field :name, class: "input" %>
                      </div>

                      <div class="field">
                        <%= f.label :email, "メールアドレス", class: "label" %>
                        <%= f.email_field :email, class: "input" %>
                      </div>


                      <div class="field">
                        <%= f.label :image, "プロフィール画像", class: "label" %>
                        <%= f.file_field :image, class: "input" %>
                      </div>

                      <%= f.submit "更新", class: "button is-black" %>
                      <%= link_to "退会",user_path(current_user.id), class: "button is-black", method: :delete, "data-confirm" => "本当に退会しますか？" %>
                    <% end %>
                  </div>
              </div>
            </div>
          </div>
</section>
