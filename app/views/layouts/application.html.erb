<!DOCTYPE html>
<html>
    <head>
      <title>GurumeBook</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>

      <meta name="viewport" content="width=device-width, initial-scale=1.0">

      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" integrity="sha256-UzFD2WYH2U1dQpKDjjZK72VtPeWP50NoJjd26rnAdUI=" crossorigin="anonymous" />
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
      <% if flash[:notice] %>
        <div class="notification is-info">
          <p class="notice"><%= notice %></p>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="notification is-danger">
          <p class="alert"><%= alert %></p>
        </div>
      <% end %>

      <nav class="navbar has-background-black">
          <div class="navbar-brand">
            <%= link_to root_path, class: "navbar-item has-text-white" do %>
            <h1 class="title has-text-white" style="font-family: cursive;">GurumeBook</h1>
            <% end %>
              
            <%if user_signed_in?%> 
              <p class="navbar-item has-text-white">ようこそ<%=current_user.name%>さん!</p>
            <%end%> 

            <a role="button" class="navbar-burger burger has-background-black" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
              <span aria-hidden="true"></span>
              <span aria-hidden="true"></span>
              <span aria-hidden="true"></span>
            </a>
          </div>

          <%if user_signed_in?%>   
            <div id="navbarBasicExample" class="navbar-menu">
              <div class="navbar-end">
                <div class="navbar-item">
                  <%= link_to("マイページ", user_path(current_user),class:"has-text-white") %>
                </div>
                <div class="navbar-item">
                  <%= link_to("ユーザー一覧", users_path, class:"has-text-white") %> 
                </div>
                <div class="navbar-item">
                  <%= link_to("投稿一覧", shops_path,class:"has-text-white") %>
                </div>
                <div class="navbar-item">
                  <%= link_to("新規投稿", new_shop_path,class:"has-text-white") %>
                </div>
                <div class="navbar-item">
                  <%= link_to("ログアウト", destroy_user_session_path, method: :delete,class:"has-text-white") %>
                </div>
              </div>
            </div>

           <%else%>


            <div id="navbarBasicExample" class="navbar-menu">
              <div class="navbar-end">
                <div class="navbar-item">
                  <%= link_to("ユーザー一覧", users_path, class:"has-text-white") %> 
                </div>
                <div class="navbar-item">
                  <%= link_to("投稿一覧", shops_path,class:"has-text-white") %>
                </div>
                <div class="navbar-item">
                  <%= link_to("新規登録", new_user_registration_path,class:"has-text-white") %>
                </div>
                <div class="navbar-item">
                  <%= link_to("ログイン", new_user_session_path,class:"has-text-white") %>
                </div>
              </div>
            </div>

          <%end%>

        </nav>


    <script type="text/javascript">
        document.querySelector('.navbar-burger').addEventListener("click", toggleNav);
        function toggleNav() {
              var nav = document.querySelector('.navbar-menu');
              if(nav.className == "navbar-menu") {
                  nav.className = "navbar-menu is-active has-background-black";
              } else {
                  nav.className = "navbar-menu";
              }
        }
    </script>


      
    <%= yield %>

 
  </body>
</html>
