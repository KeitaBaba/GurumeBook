 <section class="hero has-background-black is-fullheight">
        <div class="hero-body">
            <div class="container has-text-centered">
                <div class="column is-4 is-offset-4">
                    <strong class="title is-size-1" style="font-family: Comic Sans MS;">GurumeBook</strong>
                    <hr class="login-hr">
                    <p class="subtitle">ログイン</p>
                    <div class="box">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <form>
                            <div class="field">
                                <div class="control">
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email",:placeholder => "email", class: "input is-large" %>
                                </div>
                            </div>

                            <div class="field">
                                <div class="control">
                                    <%= f.password_field :password, autocomplete: "current-password", :placeholder => "password", class: "input is-large" %>
                                </div>
                            </div>
                            
                            <div class="actions">
                              <%= f.submit "Log in", class: "button is-block is-black is-large is-fullwidth" %>
                            </div>
                            
                        </form>
                      <% end %>
                      <%= render "devise/shared/links" %>

                    </div>
                    
                </div>
            </div>
        </div>
    </section>
