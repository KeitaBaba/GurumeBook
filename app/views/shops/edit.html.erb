<section class="hero has-background-black is-fullheight">
        <div class="hero-body">
            <div class="container has-text-centered">
                <div class="column is-4 is-offset-4">
                  <p class="subtitle">編集</p>
                  <div class="box">
                    <%= form_for @shop do |f| %>
                      <div class="field">
                        <%= f.label :title, "店名", class: "label" %>
                        <%= f.text_field :name, class: "input" %>
                      </div>

                      <div class="field">
                        <%= f.label :body, "感想", class: "label" %>
                        <%= f.text_area :body, class: "textarea" %>
                      </div>

                      <div class="field">
                        <%= f.label :写真 %>
                        <%= f.file_field :images, multiple: true %>
                      </div>

                      <div class="field">
                        <%= f.label :address, "住所", class: "label" %>
                        <%= f.text_area :address, class: "input" %>
                      </div>

                      <div id="evaluate_stars">
                        <label>評価</label>
                      </div>

                      <%= f.submit '投稿', class: "button is-black" %>
                    <% end %>
                  </div>
                </div>
            </div>
          </div>
</section>

<script>
          $('#evaluate_stars').raty({
            starOn: "<%= asset_path('star-on.png') %>",
            starOff: "<%= asset_path('star-off.png') %>",
            starHalf: "<%= asset_path('star-half.png') %>",
            scoreName: 'shop[evaluation]' //登録するモデル名とカラム名を記述
          });
</script>